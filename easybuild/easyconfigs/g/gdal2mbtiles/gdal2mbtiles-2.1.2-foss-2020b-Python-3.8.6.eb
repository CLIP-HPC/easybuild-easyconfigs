checksums = ['33ffedd465973c8bf2dc356133aa15713f11e99151eebb8ceca3a3b8fcaddcea']

#exts_defaultclass = 'PythonPackage'

dependencies = [
   ('Python', '3.8.6'),
   ('SciPy-bundle', '2020.11'),
   ('GDAL', '2.2.3', versionsuffix),
   ('webcolors', '1.11.1', versionsuffix),
   ('pyvips', '2.1.16', versionsuffix),
]


use_pip = True


#skipsteps = ['sanitycheck']

#sanity_check_commands = ["python -c 'import gdal2mbtiles'"]
 
sanity_check_paths = {
    'files': ['bin/gdal2mbtiles'],
    'dirs': ['lib/python3.8/site-packages/']
}


moduleclass = 'data'
