
easyblock = 'PythonPackage'

name = 'gdal2mbtiles'
version = '2.1.2'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/ecometrica/gdal2mbtiles'
description = """Converts a GDAL-readable dataset into an MBTiles file. This is used to generate web maps. """

toolchain = {'name': 'foss', 'version': '2020b'}


source_urls = ['https://files.pythonhosted.org/packages/a1/91/273b79d97c8e04d34cd73ca0ccc8fe5cbfd713a0a84a734e3c4d149cfab3/']
